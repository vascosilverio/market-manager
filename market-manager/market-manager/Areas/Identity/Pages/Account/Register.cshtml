@page
@model RegisterModel
@{
    ViewData["Title"] = "Registar";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Criar uma nova conta.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.NomeCompleto"></label>
                <input asp-for="Input.NomeCompleto" class="form-control" />
                <span asp-validation-for="Input.NomeCompleto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.DataNascimento"></label>
                <input asp-for="Input.DataNascimento" class="form-control" />
                <span asp-validation-for="Input.DataNascimento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Morada"></label>
                <input asp-for="Input.Morada" class="form-control" />
                <span asp-validation-for="Input.Morada" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.CodigoPostal"></label>
                <input asp-for="Input.CodigoPostal" class="form-control" />
                <span asp-validation-for="Input.CodigoPostal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Localidade"></label>
                <input asp-for="Input.Localidade" class="form-control" />
                <span asp-validation-for="Input.Localidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.NIF"></label>
                <input asp-for="Input.NIF" class="form-control" />
                <span asp-validation-for="Input.NIF" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.CC"></label>
                <input asp-for="Input.CC" class="form-control" />
                <span asp-validation-for="Input.CC" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Registar</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}