@model market_manager.Models.Utilizadores
@inject SignInManager<Utilizadores> SignInManager

@{
    ViewData["Title"] = "Perfil do Usuário";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="UpdateProfile" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="NomeCompleto" class="control-label"></label>
                <input asp-for="NomeCompleto" class="form-control" />
                <span asp-validation-for="NomeCompleto" class="text-danger"></span>
            </div>

            <!-- Add other user profile fields -->

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Atualizar Perfil</button>
            </div>
        </form>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-6">
        <h3>Alterar Senha</h3>
        <form asp-action="ChangePassword" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label for="currentPassword" class="control-label">Senha Atual</label>
                <input type="password" id="currentPassword" name="currentPassword" class="form-control" />
            </div>

            <div class="form-group">
                <label for="newPassword" class="control-label">Nova Senha</label>
                <input type="password" id="newPassword" name="newPassword" class="form-control" />
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Alterar Senha</button>
            </div>
        </form>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-6">
        <h3>Excluir Conta</h3>
        <form asp-action="DeleteAccount" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <p>Tem certeza de que deseja excluir sua conta? Esta ação não pode ser desfeita.</p>
                <button type="submit" class="btn btn-danger">Excluir Conta</button>
            </div>
        </form>
    </div>
</div>