@model market_manager.Models.Bancas

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Bancas</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit"
              method="post"
              enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NomeIdentificadorBanca" class="control-label"></label>
                <input asp-for="NomeIdentificadorBanca" class="form-control" />
                <span asp-validation-for="NomeIdentificadorBanca" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoriaBanca" class="control-label"></label>
                <select asp-for="CategoriaBanca" asp-items="@Html.GetEnumSelectList<Bancas.CategoriaProdutos>()">
                    <option selected="selected" value="">Selecione a Categoria da Banca</option>
                </select>
                <span asp-validation-for="CategoriaBanca" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LocalizacaoX" class="control-label"></label>
                <input asp-for="LocalizacaoX" class="form-control" />
                <span asp-validation-for="LocalizacaoX" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Largura" class="control-label"></label>
                <input asp-for="Largura" class="form-control" />
                <span asp-validation-for="Largura" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Comprimento" class="control-label"></label>
                <input asp-for="Comprimento" class="form-control" />
                <span asp-validation-for="Comprimento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LocalizacaoY" class="control-label"></label>
                <input asp-for="LocalizacaoY" class="form-control" />
                <span asp-validation-for="LocalizacaoY" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EstadoAtualBanca" class="control-label"></label>
                <select asp-for="EstadoAtualBanca" asp-items="@Html.GetEnumSelectList<Bancas.EstadoBanca>()">
                    <option selected="selected" value="">Selecione o Estado da Banca</option>
                </select>
                <span asp-validation-for="EstadoAtualBanca" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FotografiaBanca" class="control-label"></label>
                <input type="file" name="FotografiaBanca" accept=".png, .jpg, .jpeg, .pdf" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
