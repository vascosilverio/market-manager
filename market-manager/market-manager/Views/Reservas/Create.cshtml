@model market_manager.Models.Reservas

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Reservas</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ListaBancas" class="control-label">Selecione a Banca</label>
                
                    @Html.ListBoxFor(m => m.ListaBancas, ViewBag.Bancas as MultiSelectList, new { @class = "form-control" })
                    
                <span asp-validation-for="ListaBancas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Vendedor" class="control-label">Selecione o Vendedor</label>
                @Html.DropDownList("VendedoresList", (IEnumerable<SelectListItem>)ViewBag.VendedoresList, htmlAttributes: new { @class = "form-control" })
                <span asp-validation-for="Vendedor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataInicio" class="control-label"></label>
                <input asp-for="DataInicio" class="form-control" />
                <span asp-validation-for="DataInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataFim" class="control-label"></label>
                <input asp-for="DataFim" class="form-control" />
                <span asp-validation-for="DataFim" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataCriacao" class="control-label"></label>
                <input asp-for="DataCriacao" class="form-control" />
                <span asp-validation-for="DataCriacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EstadoActualReserva" class="control-label"></label>
                <select asp-for="EstadoActualReserva" asp-items="@Html.GetEnumSelectList<Reservas.EstadoReserva>()">
                    <option selected="selected" value="">Selecione o Estado da Reserva</option>
                </select>
                <span asp-validation-for="EstadoActualReserva" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
